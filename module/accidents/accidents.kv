#:kivy 1.0.9

<DetailWidget>:
    layout: main_layout
    label_first: label_first
    BoxLayout:
        id: main_layout
        orientation: "vertical"
        Label:
            id: label_first
            text: "Ho ho ho"
            color: (1.0, 10.0, 0.0, 1.0)
        Label:
            text: "Aho"
        Label:
            text: "Eho"
        Button:
            text: "Opt"

<AccidentsWidget>:
    layout: main_layout
    accident_btn: accident_btn

    BoxLayout:
        id: main_layout
        orientation: "vertical"

        Label:
            text: "When I was born I was so surprised; I didn't speak for a year and a half."
            text_size: self.width-20, self.height-20
            valign: 'middle'
            halign: 'center'

        Button:
            text: "Options"
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.options(self)

        Button:
            text: "Accident"
            id: accident_btn
            color: (10.0, 50.0, 10.0, 15.0)
            background_color: (1.0, 244.0, 0.0, 1.0)
            on_press: root.callme(self)

<OptionsWidget>:
    orientation: "vertical"

    TabbedPanel:
        default_tab: _colors_tab
        size: root.size
        TabbedPanelItem:
            id: _colors_tab
            text: 'Kolor'
            ColorPicker:
                on_color: root.on_color(self)
        TabbedPanelItem:
            id: _app_tab
            text: 'Aplikacja'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Here will be the app.'
                Label:
                    text: 'a'

    Spinner:
        text: "Zapisz"
        size_hint:(1, .15)
